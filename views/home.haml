!!! 5
%html
  %head
    %title Portal Test
    %meta{:charset=>"utf-8"}
    %meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1.0"}
    %link{:rel=>"stylesheet",:href=>"/css/bootstrap.css"}
    %link{:rel=>"stylesheet",:href=>"/css/bootstrap-responsive.css"}
    %link{:rel=>"stylesheet",:href=>"/css/ui-lightness/jquery-ui-1.9.2.custom.css"}
    %link{:rel=>"stylesheet",:href=>"/css/style.css"}
    %script{:type=>"text/javascript",:src=>"/js/jquery-1.8.3.js"}
    %script{:type=>"text/javascript",:src=>"/js/jquery-ui-1.9.2.custom.js"}
    %script{:type=>"text/javascript",:src=>"/js/jquery.ui.touch-punch.js"}
    %script{:type=>"text/javascript",:src=>"/js/bootstrap.js"}
    %script{:type=>"text/javascript",:src=>"/js/jquery.masonry.js"}
    %script{:type=>"text/javascript",:src=>"/js/underscore.js"}
    %script{:type=>"text/javascript",:src=>"/js/backbone.js"}
    %script{:type=>"text/javascript",:src=>"/js/jimon.portal.js"}
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href=>"##"} Jimon Portal
          .nav-callapse.callapse
            %ul.nav
              %li.active
                %a{:href=>"/#home"}
                  %i.icon-home
                  Home
              %li
                %a{:href=>"/#market"}
                  %i.icon-gift
                  Market
    #home.container
      -# HomeView
      .row
        .sub
          #home-view-switch.btn-toolbar.hidden-phone
          %ul#gadgets-nav.nav.nav-tabs.nav-stacked
        #gadgets.main
          .row
    #templates
      %script#home-view-switch-tmpl(type="text/template")
        .btn-group(data-toggle="buttons-radio")
          %a#list.btn{:href=>"#list"}
            %i.icon-list
            リスト
          %a#grid.btn{:href=>"#"}
            %i.icon-th
            ミニビュー
      %script#gadget-navs-item(type="text/template")
        %a(href="#gadget/[[= id ]]")
          [[= title ]]
      %script#gadget-header(type="text/template")
        .navbar.title
          .navbar-inner
            %a.brand
              [[= title ]]
        .menu.well.collapse
          %ul.nav.nav-list
            %li.nav-header
              Menu
            %li.config
              %a
                %i.icon-cog
                設定する
            %li.resize
              %a
                %i.icon-resize-full
                復元する
            %li.minimize
              %a
                %i.icon-resize-small
                最小化する
            %li.maximize
              %a(href="#gadget/[[= id ]]")
                %i.icon-fullscreen
                全画面にする
            %li.delete
              %a
                %i.icon-trash
                削除する
        .content
